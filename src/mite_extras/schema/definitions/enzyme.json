{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "type": "object",
  "required": [
    "name",
    "databaseIds",
    "references"
  ],
  "properties": {
    "name": {
      "title": "Protein name, e.g. 'NisB'.",
      "type": "string"
    },
    "description": {
      "title": "Brief description of the enzyme function.",
      "type": "string"
    },
    "databaseIds": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/databaseId"
      },
      "uniqueItems": true
    },
    "auxiliaryEnzymes": {
      "title": "Specify any required auxiliary enzymes that are co-forming the maturation machinery.",
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "name": {
            "title": "Protein name, e.g. 'NisC'.",
            "type": "string"
          },
          "description": {
            "title": "Brief description of function.",
            "type": "string"
          },
          "databaseIds": {
            "type": "array",
            "items": {
              "$ref": "#/$defs/databaseId"
            },
            "uniqueItems": true
          }
        }
      }
    },
    "references": {
      "type": "array",
      "items": {
        "$ref": "../commons/citation.json"
      },
      "minItems": 1,
      "uniqueItems": true
    }
  },
  "$defs": {
    "databaseId": {
      "type": "string",
      "oneOf": [
        {
          "title": "Uniprot ID reference.",
          "pattern": "^uniprot:[A-Z0-9]+$"
        },
        {
          "title": "GenBank GenPept ID (= protein ID, GenBank gene products)",
          "pattern": "^genpept:[A-Z]{3}[0-9]{5,7}\\.[0-9]+$"
        },
        {
          "title": "MIBiG ID reference",
          "pattern": "^BGC\\d{7}$"
        }
      ]
    }
  }
}